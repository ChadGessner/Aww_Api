@model IEnumerable<Aww_MVC.Models.DbAwwVM>
<div class="btn btn-primary">
@{
    ViewData["Title"] = "Index";
    
    int count = 0;

}
</div>
<h1 class="card-text card alert-link alert-success" >Database Contents</h1>

<p>
    <a class="btn btn alert-info shadow" asp-controller="Home" asp-action="Index" >Back To Api</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImageUrl)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CategoryName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CategoryId)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr class=@(count % 2 == 0 ? "alert-info":"alert-primary")>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                <partial name="_DbImageViewPartial" model=@item />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryId)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
                @Html.ActionLink("Details", "Details", new {id=item.Id}) |
                @Html.ActionLink("Delete", "Delete", new { id=item.Id})
            </td>
        </tr>
        <tr class="visually-hidden">
            @(count++)
        </tr>
        
}
    </tbody>
</table>
@section scripts{
    <style>
        body{
            background: linear-gradient(120deg,transparent,  blue 99%);
        }
    </style>
}