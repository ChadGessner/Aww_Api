@model Aww_MVC.Models.CreateAwwVM

@{
    ViewData["Title"] = "Create";
}

<h1>Add to Database</h1>

<h4>Save Image</h4>
<hr />
<img class="mb-4" height="400px" width="400px" src=@Model.VM.ImageURL />
<hr />
<h4>@Model.VM.Title</h4>

<div class="row">
    <div class="col-md-4">
        <form asp-validation-summary="All" class="row" method="post" asp-action="Create">
            <div  class="text-danger"></div>
            <input class="visually-hidden" asp-for=@Model.VM.ImageURL value=@Model.VM.ImageURL />
            <label asp-for=@Model.Category >Category</label>
            <select asp-for=@Model.CategoryId type="text">
                @foreach(var kv in ViewBag.Category)
                {
                    <header>@kv.Key</header>
                    <option class="btn btn alert-success" asp-for=@Model.CategoryId value=@kv.Value>@kv.Key</option>
                    
                }
            </select>
            
            <h1>@Model.Category.CategoryName</h1>
            <label asp-for=@Model.VM.Title></label>
            <input asp-for=@Model.VM.Title value=@Model.VM.Title type="text"/>
            <div class="form-group">
                <input  type="submit" class="btn btn alert-info mt-4" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <style>
        body{
            background-color: lightseagreen;
        }
        
    </style>
}
